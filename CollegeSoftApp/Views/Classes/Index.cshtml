@model IEnumerable<CollegeSoftApp.Models.Class>

@{
    ViewData["Title"] = "Index";
}
<div class="row">
    <div class="col-sm-12 ">
        <div class="card m-3 p-2">
            <div class="card-body">
                <div>
                    <a asp-action="Create" data-ajax="true" data-ajax-method="get" data-ajax-complete="GetCreatePage" data-bs-toggle="modal" data-bs-target="#CreateModal" class="btn btn-dark">Add New</a>
                </div>
                <div class="table-overflow">
                    <table class="table table-bordered mt-3" align="center">
                        <thead>
                            <tr>
                                <th>S.N</th>                               
                                <th>Class</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody id="Content">

                            @{
                                int count = 0;
                            }
                            @foreach(var r in Model){
                                <tr>
                                    <td>@(++count)</td>
                                    <td>@r.Cname</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="CreateModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" id="modal-dialog-content">
    </div>
</div>
<script>
 GetCreatePage = function (xhr) {
        document.getElementById('modal-dialog-content').innerHTML = xhr.responseText;
    }

    $(document).ready(function () {
        $("#data").DataTable();
    });
</script>