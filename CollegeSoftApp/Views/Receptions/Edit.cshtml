@model CollegeSoftApp.Models.Reception

@{
    ViewData["Title"] = "Edit";
}
<form asp-action="Edit">
    <div class="modal-content">
        <div class="modal-header">
            <h1 class="modal-title fs-5 text-center" id="exampleModalLabel">Add New Class</h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>       
            <div class="form-group">
                <label asp-for="CancelledDate" class="control-label"></label>
                <input asp-for="CancelledDate" class="form-control" />
                <span asp-validation-for="CancelledDate" class="text-danger"></span>
            </div>
            <div class="form-group">
               
                <input asp-for="CancelledUserId" hidden class="form-control" />
            
            </div>
           
            <div class="form-group">
                <label asp-for="ResonForCancell" class="control-label"></label>
                <input asp-for="ResonForCancell" class="form-control" />
                <span asp-validation-for="ResonForCancell" class="text-danger"></span>
            </div>
         </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>
   
